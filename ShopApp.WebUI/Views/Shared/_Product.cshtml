@model Product

<div class="card my-4 py-2">

    <img class="card-img-top img-fluid mx-auto" src=~/img/@Model.ImageUrl alt="" style="width: 75%;height:24rem;object-fit:scale-down;">

    <div class="card-body">
        <h5 class="card-title">@Model.Name</h5>
        <p class="card-text">@Model.Description</p>

        <a asp-action="Details" asp-controller="Product" asp-route-id="@Model.Id" class="btn btn-primary btn-sm">Buy</a>
        <a asp-action="EditProduct" asp-controller="Product" asp-route-id="@Model.Id" class="btn btn-success btn-sm">Edit</a>
        <a asp-action="DeleteProduct" asp-controller="Product" asp-route-id="@Model.Id" class="btn btn-danger btn-sm">Delete</a>

    </div>
</div>   