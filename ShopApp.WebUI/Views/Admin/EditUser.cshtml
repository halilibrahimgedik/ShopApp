@model UserDetailVM

<h3 class="h1 text-center my-3">User Edit</h3>
<hr class="mb-5 mt-4" />

<form method="post" asp-action="EditUser" asp-controller="Admin">

    <div class="row">
        <div class="col-md-8">
            <div asp-validation-summary="All" class="text-danger col-md-12"></div>

            <input type="hidden" asp-for="UserId" />

            <div class="mb-3 row">
                <label asp-for="Firstname" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input class="form-control" asp-for="Firstname" />
                </div>
            </div>

            <div class="mb-3 row">
                <label asp-for="Lastname" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input class="form-control" asp-for="Lastname" />
                </div>
            </div>

            <div class="mb-3 row">
                <label asp-for="Username" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <textarea class="form-control" asp-for="Username"> </textarea>
                </div>
            </div>

            <div class="mb-3 row">
                <label asp-for="PhoneNumber" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input class="form-control" asp-for="PhoneNumber" />
                </div>
            </div>

            <div class="mb-3 row">
                <label asp-for="Email" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input class="form-control" asp-for="Email" />
                </div>
            </div>

            <div class="mb-3 row">
                <div class="col-sm-10 offset-sm-2">
                    <button type="submit" class="btn btn-success">Save Changes</button>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <h3>Roles</h3>
            <hr />
            @foreach (var roleName in ViewBag.Roles)
            {
                <div class="custom-control custom-checkbox">

                    <input type="checkbox" class="custom-control-input" id="@roleName"
                           name="selectedRoles"
                           value="@roleName"
                    @(Model.UserRoles.Any(r => r == @roleName) ? "checked" : "")>

                    <label class="custom-control-label" for="@roleName"> @roleName </label>
                </div>
            }
            <hr />
            <div class="custom-control custom-checkbox">

                <input type="checkbox" class="custom-control-input" id="EmailConfirmed"
                       asp-for="EmailConfirmed"
                class="@(Model.EmailConfirmed == true ? "checked" : "")">

                <label class="custom-control-label" for="EmailConfirmed"> emailConfirmed </label>
            </div>
        </div>
    </div>
</form>
